<qti-assessment-item
    xmlns="http://www.imsglobal.org/xsd/imsqtiasi_v3p0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.imsglobal.org/xsd/imsqtiasi_v3p0 https://purl.imsglobal.org/spec/qti/v3p0/schema/xsd/imsqti_asiv3p0p1_v1p0.xsd"
    identifier="nice-tmp_xe97feb722571d971"
    title="Compare numbers of objects 2"
    time-dependent="false"
    xml:lang="en-US">

    <!-- Response declaration -->
    <qti-response-declaration identifier="RESPONSE" cardinality="single" base-type="identifier">
        <qti-correct-response>
            <qti-value>A</qti-value>
        </qti-correct-response>
    </qti-response-declaration>

    <!-- Outcome declarations -->
    <qti-outcome-declaration identifier="SCORE" cardinality="single" base-type="float">
        <qti-default-value>
            <qti-value>0</qti-value>
        </qti-default-value>
    </qti-outcome-declaration>
    <qti-outcome-declaration identifier="FEEDBACK" cardinality="single" base-type="identifier"/>
    <qti-outcome-declaration identifier="FEEDBACK-INLINE" cardinality="single" base-type="identifier"/>

    <!-- Item body -->
    <qti-item-body>
        <qti-prompt>There are more <span class="qti-keyword-emphasis">______</span>.</qti-prompt>

        <div id="reference_text">
            <p>The picture (not shown to scale here) contains four birds and five bugs in total.</p>
            <p><span class="qti-italic">Note:</span> Counting the icons, you will see 4 bird images and 5 bug images.</p>
        </div>

        <qti-choice-interaction response-identifier="RESPONSE" shuffle="true" max-choices="1">
            <qti-simple-choice identifier="A">
                Bugs
                <qti-feedback-inline outcome-identifier="FEEDBACK-INLINE" identifier="A">Correct! There are 5 bugs and 4 birds, so there are more bugs.</qti-feedback-inline>
            </qti-simple-choice>
            <qti-simple-choice identifier="B">
                Birds
                <qti-feedback-inline outcome-identifier="FEEDBACK-INLINE" identifier="B">Not quite. There are only 4 birds but 5 bugs.</qti-feedback-inline>
            </qti-simple-choice>
        </qti-choice-interaction>

        <!-- Overall feedback blocks -->
        <qti-feedback-block outcome-identifier="FEEDBACK" identifier="CORRECT" show-hide="show">
            <qti-content-body>
                <p><span class="qti-keyword-emphasis">Correct!</span> Since 5 is greater than 4, the set with more items is the bugs.</p>
            </qti-content-body>
        </qti-feedback-block>
        <qti-feedback-block outcome-identifier="FEEDBACK" identifier="INCORRECT" show-hide="show">
            <qti-content-body>
                <p><span class="qti-keyword-emphasis">Not quite.</span> Count each group: 4 birds and 5 bugs. The group with the larger count (5) is bugs.</p>
            </qti-content-body>
        </qti-feedback-block>
    </qti-item-body>

    <!-- Response processing -->
    <qti-response-processing>
        <qti-response-condition>
            <qti-response-if>
                <qti-match>
                    <qti-variable identifier="RESPONSE"/>
                    <qti-correct identifier="RESPONSE"/>
                </qti-match>
                <qti-set-outcome-value identifier="SCORE">
                    <qti-base-value base-type="float">1</qti-base-value>
                </qti-set-outcome-value>
                <qti-set-outcome-value identifier="FEEDBACK">
                    <qti-base-value base-type="identifier">CORRECT</qti-base-value>
                </qti-set-outcome-value>
            </qti-response-if>
            <qti-response-else>
                <qti-set-outcome-value identifier="SCORE">
                    <qti-base-value base-type="float">0</qti-base-value>
                </qti-set-outcome-value>
                <qti-set-outcome-value identifier="FEEDBACK">
                    <qti-base-value base-type="identifier">INCORRECT</qti-base-value>
                </qti-set-outcome-value>
            </qti-response-else>
        </qti-response-condition>
    </qti-response-processing>

</qti-assessment-item>